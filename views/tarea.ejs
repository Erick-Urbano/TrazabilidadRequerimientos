          <tr class="bg-primary text-white">
            <th scope="col">ID</th>
            <th scope="col">PROYECTO</th>
            <th scope="col">DESCRIPCION</th>  
            <th scope="col">ACCIONES</th>          
          </tr>
        </thead>
        <tbody> 
          
          <% results.forEach((texto)=> { %>
            <tr>  
                <td><%= texto.id2 %></td>  
                <td><%= texto.texto %></td>
                <td><%= texto.descripcion %></td>
                <td>
                  <a href="/editar/<%= texto.id2 %>" class="btn btn-outline-info"><i class='bx bxs-edit'></i></a>
                  <a href="/borrar/<%= texto.id2 %>" class="btn btn-outline-danger"><i class='bx bxs-trash-alt'></i></a>      
                  <a href='http://localhost:3000/tabla' class="btn btn-outline-primary"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-right-square" viewBox="0 0 16 16">
